    <children>
        <Label fx:id="chatLabel" layoutX="14.0" layoutY="14.0" prefHeight="18.0" prefWidth="316.0" textFill="WHITE">
         <font>
            <Font size="13.0" />
         </font></Label>
        <ListView fx:id="chatArea" layoutX="14.0" layoutY="48.0" prefHeight="300.0" prefWidth="572.0" />
        <TextField fx:id="messageField" layoutX="14.0" layoutY="360.0" prefWidth="450.0" promptText="Type your message..." />
        <Button layoutX="478.0" layoutY="360.0" mnemonicParsing="false" onAction="#sendMessage" text="Send" />
    </children>
</AnchorPane>
