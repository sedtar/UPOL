<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>


<?import java.net.URL?>
<AnchorPane prefHeight="200.0" prefWidth="320.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.zapoctovy.LoginController">
    <stylesheets>
        <URL value="@style.css" />
    </stylesheets>
    <children>
        <Label layoutX="46.0" layoutY="10.0" text="Login form" />
        <Label layoutX="46.0" layoutY="44.0" text="Username" />
        <Label layoutX="46.0" layoutY="94.0" text="Password" />
        <Label layoutX="46.0" layoutY="210.0" text="Create Account" />
        <TextField fx:id="usernameField" layoutX="144.0" layoutY="30.0" promptText="Enter username" />
        <PasswordField fx:id="passwordField" layoutX="144.0" layoutY="80.0" promptText="Enter password" />
        <Button fx:id="loginButton" layoutX="144.0" layoutY="110.0" mnemonicParsing="false" text="Login" onAction="#login" styleClass="button" />
        <Button fx:id="createAccountButton" layoutX="144.0" layoutY="190.0" mnemonicParsing="false" text="Sign in" styleClass="button" />

        <Label fx:id="statusLabel" layoutX="108.0" layoutY="240.0" />
    </children>
</AnchorPane>